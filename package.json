{
  "name": "ore-smart-bot",
  "version": "1.0.0",
  "private": true,
  "description": "ORE Smart Bot - Domain-Driven Design refactor with Hexagonal Architecture",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npx turbo run build",
    "build:domain": "cd packages/domain && yarn build",
    "build:config": "cd packages/config && yarn build",
    "build:bot": "cd apps/bot && yarn build",
    "test": "npx turbo run test",
    "test:domain": "cd packages/domain && yarn test",
    "typescript:check": "npx turbo run typescript:check",
    "lint:check": "npx turbo run lint:check",
    "lint:fix": "npx turbo run lint:fix",
    "format:check": "npx turbo run format:check",
    "format:fix": "npx turbo run format:fix",
    "check:all": "npx turbo run check:all",
    "check": "npx turbo run typescript:check lint:check",
    "clean": "npx turbo run clean",
    "dev": "npx turbo run dev --filter=@ore-smart-bot/bot",
    "start": "cd apps/bot && yarn start"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "tsx": "^4.6.0",
    "turbo": "^2.7.5",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "yarn@4.12.0",
  "dependencies": {
    "pino": "^10.2.1",
    "pino-pretty": "^13.1.3"
  }
}
