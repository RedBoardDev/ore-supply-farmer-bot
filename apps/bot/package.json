{
  "name": "@osb/bot",
  "version": "1.0.0",
  "private": true,
  "description": "ORE Smart Bot application",
  "main": "./src/main.ts",
  "types": "./src/main.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/main.ts",
      "import": "./src/main.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "import": "./src/*.ts"
    }
  },
  "scripts": {
    "start": "tsx src/main.ts",
    "dev": "tsx watch src/main.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "typescript:check": "tsc --noEmit",
    "lint:check": "biome check .",
    "lint:fix": "biome check . --write --unsafe",
    "format:check": "biome format .",
    "format:fix": "biome format --write .",
    "check:all": "yarn typescript:check && yarn lint:check"
  },
  "dependencies": {
    "@osb/config": "*",
    "@osb/domain": "*",
    "@solana/web3.js": "^1.91.0",
    "bs58": "^5.0.0"
  },
  "devDependencies": {
    "@types/bs58": "^4.0.4",
    "@types/node": "^20.10.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vite-tsconfig-paths": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
