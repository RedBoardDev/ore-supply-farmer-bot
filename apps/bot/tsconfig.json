{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "Preserve",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@osb/domain": ["../../packages/domain/src/index.ts"],
      "@osb/domain/*": ["../../packages/domain/src/*"],
      "@osb/config": ["../../packages/config/src/index.ts"],
      "@osb/config/*": ["../../packages/config/src/*"],
      "@osb/bot": ["./src/main.ts"],
      "@osb/bot/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../../packages/domain" }, { "path": "../../packages/config" }]
}
