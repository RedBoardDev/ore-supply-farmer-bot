{
  "name": "@osb/config",
  "version": "1.0.0",
  "private": true,
  "description": "Configuration types and validation for ORE Smart Bot",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "typescript:check": "tsc --noEmit",
    "lint:check": "biome check .",
    "lint:fix": "biome check . --write --unsafe",
    "format:check": "biome format .",
    "format:fix": "biome format --write .",
    "check:all": "yarn typescript:check && yarn lint:check"
  },
  "dependencies": {
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
