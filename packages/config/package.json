{
  "name": "@ore-smart-bot/config",
  "version": "1.0.0",
  "private": true,
  "description": "Configuration types and validation for ORE Smart Bot",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "typescript:check": "tsc --noEmit",
    "lint:check": "biome check .",
    "lint:fix": "biome check . --apply-unsafe",
    "format:check": "biome format .",
    "format:fix": "biome format --write .",
    "check:all": "yarn typescript:check && yarn lint:check"
  },
  "dependencies": {
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
